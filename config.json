{
  "name": "Smart Voltronic Node-RED",
  "version": "1.0.0",
  "slug": "smart_voltronic",
  "description": "Node-RED Voltronic inverter bridge to MQTT",
  "startup": "services",
  "boot": "auto",
  "arch": ["amd64", "aarch64", "armv7"],

  "init": false,
  "host_network": true,

  "devices": [
    "/dev/serial/by-id:/dev/serial/by-id:rwm"
  ],

  "map": ["data:rw"],

  "options": {
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "",
    "mqtt_pass": "",
    "serial_ports": [
      "",
      "",
      ""
    ]
  },

  "schema": {
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str?",
    "mqtt_pass": "password?",
    "serial_ports": ["str?"]
  }
}
